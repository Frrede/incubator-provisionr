<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             targetNamespace="http://www.bpmnwithactiviti.org"
             xmlns:activiti="http://activiti.org/bpmn">

    <process id="amazon" name="Amazon Process" isExecutable="true">
        <startEvent id="start"/>
        <serviceTask id="checkCredentials" name="Check credentials"
                     activiti:expression="#{amazon::checkCredentials.apply(pool.provider)}"
                     activiti:resultVariableName="validProvider"
                     activiti:async="true"/>
        <endEvent id="end"/>

        <sequenceFlow sourceRef="start" targetRef="checkCredentials"/>
        <sequenceFlow sourceRef="checkCredentials" targetRef="end"/>

    </process>
</definitions>
